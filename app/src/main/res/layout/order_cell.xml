<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_layout"
    android:layout_width="370dp"
    android:layout_height="40dp"
    android:background="@android:color/black"
    app:layout_wrapBefore="false">

    <TextView
        android:id="@+id/order_cell_order_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/order_cell_bottom_border"
        app:layout_constraintStart_toEndOf="@+id/order_cell_checkMark_imageView"
        app:layout_constraintTop_toBottomOf="@+id/order_cell_top_border" />

    <TextView
        android:id="@+id/strikethrough"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/order_cell_bottom_border"
        app:layout_constraintStart_toEndOf="@+id/order_cell_checkMark_imageView"
        app:layout_constraintTop_toBottomOf="@+id/order_cell_top_border" />

    <View
        android:id="@+id/order_cell_left_border"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/order_cell_right_border"
        android:layout_width="4dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/order_cell_bottom_border"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/order_cell_top_border"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/order_cell_checkMark_imageView"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="6dp"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/order_cell_bottom_border"
        app:layout_constraintStart_toEndOf="@+id/order_cell_left_border"
        app:layout_constraintTop_toBottomOf="@+id/order_cell_top_border"
        app:srcCompat="@drawable/check" />
</androidx.constraintlayout.widget.ConstraintLayout>
