<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_control_item_guide_v40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".4"
        android:orientation="vertical"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_control_item_guide_v75"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".75"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/item_control_item_guide_v95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent=".95"
        android:orientation="vertical"/>
    <TextView
        android:id="@+id/item_control_item_text_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:text="Placeholder"
        android:layout_margin="4dp"
        android:textColor="@color/colorFocusLinkBlue"
        app:layout_constraintTop_toTopOf="@id/item_control_text_item_count"
        app:layout_constraintBottom_toBottomOf="@id/item_control_text_item_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/item_control_item_guide_v40"
        />

    <TextView
        android:id="@+id/item_control_text_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_control_item_guide_v75"
        app:layout_constraintEnd_toEndOf="@id/item_control_item_guide_v95"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="20"
        android:textColor="@color/colorFocusLinkBlue"
        android:background="@android:color/transparent"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/item_control_image_out_of_stock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/item_control_item_guide_v75"
        app:layout_constraintEnd_toEndOf="@id/item_control_item_guide_v95"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="5dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ban"
        android:scaleType="fitCenter"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>